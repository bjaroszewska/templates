$greyColor =#FAFAFA
$blackColor = #000000
$transitionMedium = .3s
$transitionLarge = .5s
body
  background: $greyColor
  label:hover
    cursor: pointer
  #burger
    opacity:0
  #burger + label
  	position: fixed
  	top: 5vh
  	right: 40px
  	height: 6vh
  	width: 4vh
  	display: grid
  	z-index: 5
  	span
  	  grid-column-start: 1
  	  height: 2px
  	  top: 50%
  	  display: block
  	  background: $blackColor
  	  transition: $transitionLarge
    span:first-child
      top: 3px
    span:last-child
      top: 16px

  #burger:checked + label
    span
      opacity: 0
      top: 50%
    span:first-child
      opacity: 1
      transform: rotate(405deg)
    span:last-child
      opacity: 1
      transform: rotate(-405deg)
  #burger ~ nav
    background: white
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 15vh
    z-index: 3
    transition: $transitionLarge
    overflow: hidden
    > ul
      list-style-type: none;
      text-align: center
      position: absolute
      top: 10vh
      left: 20%
      right: 20%
      > li
        opacity: 0
        transition:  $transitionMedium 
        transition-delay: 0s
        > a
          text-decoration: none
          text-transform: uppercase
          color: $blackColor
          font-family: sans-serif
          display: block
          padding: 10px
   #burger:checked ~ nav
    height: 100vh
    transition-delay: 0s
    > ul
      > li
        opacity: 1
        transition-delay: $transitionMedium 

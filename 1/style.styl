$greyColor =#FAFAFA
$darkGrey = #9C959A
$blackColor = #000000
$mainColor = #894534
$transitionMedium = .3s
$transitionLarge = .5s


body
  font-family: 'Raleway', sans-serif;
  background: $greyColor
  label:hover
    cursor: pointer
  margin: 0px
  #burger
    opacity:0
  #burger + label
  	position: fixed
  	top: 5vh
  	right: 40px
  	height: 6vh
  	width: 4vh
  	display: grid
  	z-index: 5
  	span
  	  grid-column-start: 1
  	  height: 2px
  	  top: 50%
  	  display: block
  	  background: $mainColor
  	  transition: $transitionLarge
    span:first-child
      top: 3px
    span:last-child
      top: 16px

  #burger:checked + label
    span
      opacity: 0
      top: 50%
    span:first-child
      opacity: 1
      transform: rotate(405deg)
    span:last-child
      opacity: 1
      transform: rotate(-405deg)
  #burger ~ nav
    background: white
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 15vh
    z-index: 3
    transition: $transitionLarge
    overflow: hidden
    > ul
      list-style-type: none;
      text-align: center
      position: absolute
      top: 10vh
      left: 20%
      right: 20%
      > li
        opacity: 0
        transition:  $transitionMedium 
        transition-delay: 0s
        > a
          text-decoration: none
          text-transform: uppercase
          color: $blackColor
          font-family: sans-serif
          display: block
          padding: 10px
          color: $mainColor
   #burger:checked ~ nav
    height: 100vh
    transition-delay: 0s
    > ul
      > li
        opacity: 1
        transition-delay: $transitionMedium 
  .logo
    z-index: 1000
    position: fixed
    font-family: 'Sacramento', cursive;
    color: $mainColor
    font-size: 10vh
    margin-left: 5px
  .main-image
      background-image: url('./images/bakery.jpg')
      height: 100vh
      background-repeat: no-repeat
      background-size: cover;
  .paralaxa
      background-image: url('./images/brot.jpg')
      background-repeat: no-repeat
      background-attachment: fixed;      background-size: cover;

  .grid 
       display: grid 
       justify-content: center;
       margin: 10vh
       background-color: $greyColor
       grid-template-columns: repeat(3, 1fr);
       grid-gap: 2vh 5vh
  .item
          &-history
                align-self: start
                grid-column-start: 1
                grid-column-end: 4          
          &-recipe
            justify-self: center
          &-products
               justify-self: end;
          &-location
            align-self: end;
  .text-box 
    padding: 10px;
    padding-top: 20px;
    padding-bottom: 20px;
    background-color: white
    border-left: 3px solid $mainColor
    font-size: 17px
    color: $darkGrey
  .title-box 
    color: black
   
  .shape 
      shape-outside: polygon(0 0, 0 200px, 300px 600px);
      float: left;
      width: 200px;
      height: 200px;

  .bread-icon 
    display: block;
    margin-left: auto;
    margin-right: auto;
  footer 
    height: 100px
    text-align: center
    background-color: white
    color:  $mainColor
    font-family: 'Shadows Into Light Two', cursive
    font-size: 17px
    padding-top: 20px

/** SMALL DEVICES **/
@media only screen and (max-width : 768px) {
 .grid  {
        display: flex !important; 
        flex-direction: column;
    }
        }


